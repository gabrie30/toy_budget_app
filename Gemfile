group :development, :test do
  gem 'byebug'                  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
end

group :development do
  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'
  gem 'better_errors'           #
  gem 'binding_of_caller'       #
  gem 'pry-rails'               #
  gem 'quiet_assets'            #
  gem 'annotate'                # annotate routes to show routes in the editor
  gem 'rails_db'                # visualize your db in the browser — go to http://localhost:3000/rails/db
  gem 'bullet'                  # help reduce sql query speeds
  gem 'lol_dba'                 # helps scan for better indexing
  gem 'brakeman'                # ez security scanner
  gem 'rails-erd'               # Helps you visualize models — run — bundle exec erd (brew install graphviz)
  gem 'spring'
end

